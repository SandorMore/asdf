<Window x:Class="asdf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kenó SMS szelvények" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnBetoltes" Content="Szelvények betöltése" Width="150" Height="30" Margin="0,0,10,0" Click="btnBetoltes_Click"/>
            <Button x:Name="btnSorsolas" Content="Napi sorsolás" Width="150" Height="30" Click="btnSorsolas_Click"/>
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Szelvények:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox x:Name="lbSzelvenyek" Grid.Row="1" SelectionChanged="lbSzelvenyek_SelectionChanged"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Sorsolt számok:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox x:Name="lbSorsoltSzamok" Grid.Row="1"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Tét szorzó: " FontWeight="Bold"/>
                <TextBlock x:Name="tbTetSzorzo" Text="-" Margin="5,0,20,0"/>

                <TextBlock Text="Nyeremény: " FontWeight="Bold"/>
                <TextBlock x:Name="tbNyeremeny" Text="-" Foreground="Red" FontWeight="Bold" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>


        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="LightGreen" BorderBrush="DarkGreen" BorderThickness="2" CornerRadius="5" Margin="0,10,0,0">
            <Grid x:Name="gridSzelveny" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Kitöltött szelvény:" FontWeight="Bold" Margin="0,0,0,5"/>

        
                <UniformGrid x:Name="ugSzelvenySzamok" Grid.Row="1" Rows="8" Columns="10" Margin="5"/>
            </Grid>
        </Border>
    </Grid>
</Window>